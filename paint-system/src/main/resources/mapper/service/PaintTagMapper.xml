<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paint.service.mapper.PaintTagMapper">

    <resultMap type="PaintTag" id="PaintTagResult">
        <result property="id" column="id"/>
        <result property="paintId" column="paint_id"/>
        <result property="tag" column="tag"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateUser" column="update_user"/>
    </resultMap>

    <sql id="selectPaintTagVo">
        select id, paint_id, tag, status, create_time, update_time, update_user
        from paint_tag
    </sql>

    <select id="selectPaintTagList" parameterType="PaintTag" resultMap="PaintTagResult">
        <include refid="selectPaintTagVo"/>
        <where>
            <if test="paintId != null ">
                and paint_id = #{paintId}
            </if>
            <if test="tag != null  and tag != ''">
                and tag = #{tag}
            </if>
            <if test="status != null  and status != ''">
                and status = #{status}
            </if>
            <if test="updateUser != null ">
                and update_user = #{updateUser}
            </if>
        </where>
    </select>

    <select id="selectPaintTagById" parameterType="String"
            resultMap="PaintTagResult">
        <include refid="selectPaintTagVo"/>
        where id = #{id}
    </select>

    <insert id="insertPaintTag" parameterType="PaintTag">
        insert into paint_tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,
            </if>
            <if test="paintId != null">paint_id,
            </if>
            <if test="tag != null and tag != ''">tag,
            </if>
            <if test="status != null and status != ''">status,
            </if>
            <if test="createTime != null">create_time,
            </if>
            <if test="updateTime != null">update_time,
            </if>
            <if test="updateUser != null">update_user,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},
            </if>
            <if test="paintId != null">#{paintId},
            </if>
            <if test="tag != null and tag != ''">#{tag},
            </if>
            <if test="status != null and status != ''">#{status},
            </if>
            <if test="createTime != null">#{createTime},
            </if>
            <if test="updateTime != null">#{updateTime},
            </if>
            <if test="updateUser != null">#{updateUser},
            </if>
        </trim>
    </insert>

    <update id="updatePaintTag" parameterType="PaintTag">
        update paint_tag
        <trim prefix="SET" suffixOverrides=",">
            <if test="paintId != null">paint_id =
                #{paintId},
            </if>
            <if test="tag != null and tag != ''">tag =
                #{tag},
            </if>
            <if test="status != null and status != ''">status =
                #{status},
            </if>
            <if test="createTime != null">create_time =
                #{createTime},
            </if>
            <if test="updateTime != null">update_time =
                #{updateTime},
            </if>
            <if test="updateUser != null">update_user =
                #{updateUser},
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePaintTagById" parameterType="String">
        delete
        from paint_tag
        where id = #{id}
    </delete>

    <delete id="deletePaintTagByIds" parameterType="String">
        delete from paint_tag where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>